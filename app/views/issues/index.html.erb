<p><%= link_to 'New Issue', new_issue_path %></p>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.title %></td>
    <td><%= issue.description %></td>
    <td><%= issue.status %></td>
    <td><%= link_to 'Show', issue %>
    | <%= link_to 'Edit', edit_issue_path(issue) %>
    | <%= link_to 'Destroy', issue, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
